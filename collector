#!/usr/bin/nodejs

var daemon = require("daemonize2").setup({
    main: "collector.js",
    name: "Cryptonity collector",
    pidfile: "/var/run/cryptonity-collector.pid",
    silent: true,
    user: "cryptonity",
    group: "cryptonity"
});

if (process.getuid() != 0) {
    console.log("Expected to run as root");
    process.exit(1);
}

switch (process.argv[2]) {

    case "start":
        daemon.start();
        break;

    case "stop":
        daemon.stop();
        break;

    case "kill":
        daemon.kill();
        break;

    case "restart":
        daemon.stop(function(err) {
            daemon.start();
        });
        break;

    case "reload":
        daemon.sendSignal("SIGUSR1");
        break;

    case "status":
        var pid = daemon.status();
        if (pid) {
            console.log("Daemon running. PID: " + pid);
        } else {
            console.log("Daemon is not running.");
        }
        break;

    default:
        console.log("Usage: [start|stop|kill|restart|reload|status]");
}